@page
@using Microsoft.AspNetCore.Mvc.Localization
@using HQSOFT.Common.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using HQSOFT.Common.Web.Pages.Common.HQTasks
@using HQSOFT.Common.HQTasks;
@using System.Globalization
@inject IHtmlLocalizer<CommonResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Common/HQTasks/CreateModal" autocomplete="off">
    <abp-modal id="HQTaskCreateModal">
        <abp-modal-header title="@L["NewHQTask"].Value"></abp-modal-header>

        <abp-modal-body>
                    

            <abp-input asp-for="HQTask.Subject"   />


            <abp-input asp-for="HQTask.Project"   />


            <abp-select asp-for="HQTask.Status"   />


            <abp-select asp-for="HQTask.Priority"   />

            <abp-input asp-for="HQTask.ExpectedStartDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date"/>

            <abp-input asp-for="HQTask.ExpectedEndDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date"/>


            <abp-input asp-for="HQTask.ExpectedTime"   />


            <abp-input asp-for="HQTask.Process"   />

                    
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>