                            @foreach (var itemValue in Enum.GetValues(typeof(PriorityAssign)))
                            {
                                <SelectItem TValue="PriorityAssign" Value="@((PriorityAssign) itemValue)">
                                    @L[$"Enum:PriorityAssign.{((PriorityAssign) itemValue).ToString("d")}"]
                                </SelectItem>
